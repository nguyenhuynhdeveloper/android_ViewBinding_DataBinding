<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    >

    <data>

        <variable
            name="UserViewModal"
            type="com.example.android_viewbinding_databinding.UserViewModal" />
        <variable
            name="MainViewModal"
            type="com.example.android_viewbinding_databinding.MainViewModel" />
    </data>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation = "vertical"
    >

    <TextView
        android:id = "@+id/tv_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text = "@{MainViewModal.name}"

        />
<!--Cách 1: method reference : Cần tham số View -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop = "10dp"
        android:onClick="@{MainViewModal::showLongMessage}"
        android:text = "Button 1"
        />

<!--Cách 2: listener Binding : Có 1 tham số đơn giản String -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop = "10dp"
        android:onClick="@{() -> MainViewModal.showLongMessage2(MainViewModal.name)}"
        android:text = "Button 2"
        />
<!-- Trường hợp có sử dụng  tới view thì thêm tham số View vào , để có thể sử dụng view đó để thao tác với View  -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop = "10dp"
        android:onClick="@{(view) -> MainViewModal.showLongMessage3(view, MainViewModal.name)}"
        android:text = "Button 3"
        />
<!-- Tham số là 1 object ,
Viết ở đây thì viết kiểu dữ liệu vào cho tham số
        android:onClick="@{() -> MainViewModal.showLongMessage4(use)}"  // Viết như này cũng không được
Ở ther data hoàn toàn có thể thêm nhiều variable , -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop = "10dp"
        android:onClick="@{() -> MainViewModal.showLongMessage4(UserViewModal)}"
        android:text = "Button 4"
        />
<androidx.recyclerview.widget.RecyclerView
    android:id= "@+id/rcv_user"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop = "10dp"
    android:layout_marginStart="10dp"

    />

    <FrameLayout
        android:id = "@+id/content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />




</LinearLayout>




</layout>